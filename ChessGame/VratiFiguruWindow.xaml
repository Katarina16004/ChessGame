<Window x:Class="ChessGame.VratiFiguruWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vrati Figuru" Height="300" Width="400">
    <Grid>
        <ListBox x:Name="ListaFigura" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="360" SelectionChanged="ListaFigura_SelectionChanged">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Ime}" />
            </DataTemplate>
        </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="button" IsEnabled="False" Content="Vrati" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
